<form action="/product/add" method="post" enctype="multipart/form-data">
   <h1>ADD NEW PRODUCT</h1>
   Product name: <input type="text" name="productname" required>
   <br><br>
   Product description: <input type="text" name="description" required>
   <br><br>
   Product image: <input type="file" name="image" accept="image/*" required>
   <br><br>
   Product price: <input type="text" name="price" required>
   <br><br>
   Product brand: <br>
   <select name="brand">
      {{#each brands }}
      <option value="{{ _id }}"> {{ brandname }}</option>
      {{/each}}
   </select>
   <br><br>
   Product category: <br>
   <select name="category">
      {{#each categories }}
      <option value="{{ _id }}"> {{ categoryname }}</option>
      {{/each}}
   </select>
   <br><br>
   <div class="modal-footer">
      <button type="submit" class="btn btn-success">Add</button>
   </div>
</form>
