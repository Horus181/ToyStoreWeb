<form action="/brand/edit/{{ brand._id }}" method="post">
   <h1>Edit brand</h1>
   Brand name: <input type="text" name="brandname" value="{{ brand.brandname }}" required>
   <br><br>
   Brand country: <input type="text" name="country" id="" value="{{ brand.country }}" required>
   <br><br>
   <div class="modal-footer">
               <button type="submit" class="btn btn-success">Edit</button>
            </div>
</form>